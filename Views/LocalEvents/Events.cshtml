@model List<PROG_3B_ST10255309.Models.Event>

<div class="p-4 container">
    <h1 class="display-4 text-center">Local Events and Announcements</h1>
</div>


<style>
    body {
        background-image: url('https://e1.pxfuel.com/desktop-wallpaper/8/898/desktop-wallpaper-light-colour-plain-backgrounds-light-grey-plain.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .custom-button {
        width: 200px;
        height: 50px;
        font-size: 18px;
        margin-top: 10px;
    }
</style>

<div class="container">
    <img src="https://upload.wikimedia.org/wikipedia/commons/a/af/Flag_of_South_Africa.svg" alt="SA Flag" class="flag" />
    <style>
        .flag {
            position: absolute;
            top: 40px;
            right: 10px;
            width: 100px;
            height: auto;
        }
    </style>

    <img src="~/uploads/LOGO.png" alt="Muni Logo" class="logo" />
    <style>
        .logo {
            position: absolute;
            top: 20px;
            right: 120px;
            width: 100px;
            height: auto;
        }
    </style>
</div>

<!--Search for events-->
<div class="search-box">
    <form asp-action="SearchEvents" method="get">
        <div class="row">
            <h4>Search for specific events</h4>
            <div class="col-md-4">
                <label for="category" class="form-label">Category</label>
                <select name="category" id="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat" selected="@(ViewBag.SelectedCategory == cat)">@cat</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" name="startDate" id="startDate" class="form-control"
                       value="@(ViewBag.StartDate?.ToString("yyyy/MM/dd"))" />
            </div>

            <div class="col-md-3">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" name="endDate" id="endDate" class="form-control"
                       value="@(ViewBag.EndDate?.ToString("yyyy/MM/dd"))" />
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Search</button>
                <a asp-action="ClearAll" class="btn btn-danger w-100">Clear</a>
            </div>
        </div>
    </form>
</div>

<div style="height: 10px"></div>

<!--Filter all events-->
<div class="filter-box">
    <form asp-action="SearchEvents" method="get">
        <div class="row">
            <h4>Filter all events</h4>
            <div class="col-md-3">
                <select name="sortBy" id="sortBy" class="form-select">
                    <option value="date_asc" selected="@(ViewBag.SortBy == "date_asc")">Date: Earliest to Latest</option>
                    <option value="date_desc" selected="@(ViewBag.SortBy == "date_desc")">Date: Latest to Earliest</option>
                    <option value="name_asc" selected="@(ViewBag.SortBy == "name_asc")">Name: A to Z</option>
                    <option value="name_desc" selected="@(ViewBag.SortBy == "name_desc")">Name: Z to A</option>
                    <option value="category_asc" selected="@(ViewBag.SortBy == "category_asc")">Category: A to Z</option>
                    <option value="category_desc" selected="@(ViewBag.SortBy == "category_desc")">Category: Z to A</option>
                </select>
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <a asp-action="ClearAll" class="btn btn-danger w-100">Clear</a>
            </div>
        </div>
    </form>
</div>

<div style="height: 10px"></div>

<!--Recommending events-->
<div class="container">
    @if (ViewBag.Recommendations != null && ((List<PROG_3B_ST10255309.Models.Event>)ViewBag.Recommendations).Count > 0)
    {
        <div class="recommendation-section">
            <h4 class="mb-3">
                <i class="fas fa-star text-warning"></i> Recommended For You
                <small class="text-muted">
                    @if (ViewBag.HasSearchHistory == true)
                    {
                        <span>(Based on your search history)</span>
                    }
                    else
                    {
                        <span>(Upcoming events)</span>
                    }
                </small>
            </h4>

            @foreach (var recommendedEvent in (List<PROG_3B_ST10255309.Models.Event>)ViewBag.Recommendations)
            {
                <div class="card event-card recommendation-card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-9">
                                <h5 class="card-title"> @recommendedEvent.Name</h5>
                                <p class="text-muted mb-2">
                                    <strong>Date:</strong> @recommendedEvent.Date.ToString("dddd, MMMM dd, yyyy") <br />
                                    <strong>Location:</strong> @recommendedEvent.Location <br />
                                    <strong>Category:</strong> <span class="badge bg-warning text-dark">@recommendedEvent.Category</span>
                                </p>
                                <p class="card-text">@recommendedEvent.Description</p>
                            </div>
                            <div class="col-md-3 text-end">
                                <span class="badge bg-success">@recommendedEvent.Status</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div style="height: 10px"></div>

<!-- Listing all of the events -->
<div class="container">
<h4 class="mb-3">Showing @Model.Count Events</h4>

@if (Model.Count == 0)
{
    <div class="alert alert-warning text-center">
        <h4>No Events Found</h4>
        <p>Try adjusting your search filters.</p>
    </div>
}
else
{
    @foreach (var eventItem in Model)
    {
        <div class="card event-card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <h5 class="card-title">@eventItem.Name</h5>
                        <p class="text-muted mb-2">
                            <strong>Date:</strong> @eventItem.Date.ToString("dddd, MMMM dd, yyyy") <br />
                            <strong>Location:</strong> @eventItem.Location <br />
                            <strong>Category:</strong> <span class="badge bg-primary">@eventItem.Category</span>
                        </p>
                        <p class="card-text">@eventItem.Description</p>
                    </div>
                    <div class="col-md-3 text-end">
                        <span class="badge bg-success">@eventItem.Status</span>
                    </div>
                </div>
            </div>
        </div>
    }
}
</div>

