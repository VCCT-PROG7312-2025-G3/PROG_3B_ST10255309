@model List<PROG_3B_ST10255309.Models.Event>

<div class="p-4 container">
    <h1 class="display-4 text-center">Local Events and Announcements</h1>
</div>


<style>
    body {
        background-image: url('https://e1.pxfuel.com/desktop-wallpaper/8/898/desktop-wallpaper-light-colour-plain-backgrounds-light-grey-plain.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .custom-button {
        width: 200px;
        height: 50px;
        font-size: 18px;
        margin-top: 10px;
    }
</style>

<div class="container">
    <img src="https://upload.wikimedia.org/wikipedia/commons/a/af/Flag_of_South_Africa.svg" alt="SA Flag" class="flag" />
    <style>
        .flag {
            position: absolute;
            top: 40px;
            right: 10px;
            width: 100px;
            height: auto;
        }
    </style>
</div>

<!--Search Events-->
<div class="search-box">
    <form asp-action="Events" method="get">
        <div class="row">
            <div class="col-md-4">
                <label for="category" class="form-label">Category</label>
                <select name="category" id="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat" selected="@(ViewBag.SelectedCategory == cat)">@cat</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label for="startDate" class="form-label">Start Date</label>
                <input type="date" name="startDate" id="startDate" class="form-control"
                       value="@(ViewBag.StartDate?.ToString("yyyy/MM/dd"))" />
            </div>

            <div class="col-md-3">
                <label for="endDate" class="form-label">End Date</label>
                <input type="date" name="endDate" id="endDate" class="form-control"
                       value="@(ViewBag.EndDate?.ToString("yyyy/MM/dd"))" />
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Search</button>
                <a asp-action="ClearAll" class="btn btn-danger w-100">Clear</a>
            </div>
        </div>
    </form>
</div>

<div style="height: 10px"></div>

<!--Filter Events-->
<div class="filter-box">
    <form asp-action="Events" method="get">
        <div class="row">
            <div class="col-md-3">
                <select name="sortBy" id="sortBy" class="form-select">
                    <option value="date_asc" selected="@(ViewBag.SortBy == "date_asc")">Date: Earliest to Latest</option>
                    <option value="date_desc" selected="@(ViewBag.SortBy == "date_desc")">Date: Latest to Earliest</option>
                    <option value="name_asc" selected="@(ViewBag.SortBy == "name_asc")">Name: A to Z</option>
                    <option value="name_desc" selected="@(ViewBag.SortBy == "name_desc")">Name: Z to A</option>
                    <option value="category_asc" selected="@(ViewBag.SortBy == "category_asc")">Category: A to Z</option>
                    <option value="category_desc" selected="@(ViewBag.SortBy == "category_desc")">Category: Z to A</option>
                </select>
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <a asp-action="ClearAll" class="btn btn-danger w-100">Clear</a>
            </div>
        </div>
    </form>
</div>

<div style="height: 10px"></div>

<!-- Events List -->
<h4 class="mb-3">Showing @Model.Count Events</h4>

@if (Model.Count == 0)
{
    <div class="alert alert-warning text-center">
        <h4>No Events Found</h4>
        <p>Try adjusting your search filters.</p>
    </div>
}
else
{
    @foreach (var eventItem in Model)
    {
        <div class="card event-card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <h5 class="card-title">@eventItem.Name</h5>
                        <p class="text-muted mb-2">
                            <strong>Date:</strong> @eventItem.Date.ToString("dddd, MMMM dd, yyyy") <br />
                            <strong>Location:</strong> @eventItem.Location <br />
                            <strong>Category:</strong> <span class="badge bg-primary">@eventItem.Category</span>
                        </p>
                        <p class="card-text">@eventItem.Description</p>
                    </div>
                    <div class="col-md-3 text-end">
                        <span class="badge bg-success">@eventItem.Status</span>
                    </div>
                </div>
            </div>
        </div>
    }
}


